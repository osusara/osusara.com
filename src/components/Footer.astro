---
import {
  fullName,
  email,
  links,
  location,
  website,
  nickName,
} from "../data.json";
---

<footer class="bg-dark text-light">
  <div class="max-w-5xl mx-auto px-4 py-12 text-sm">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Contact Info -->
      <div class="flex flex-col items-center md:items-start gap-4">
        <h3 class="text-xl font-semibold">Contact</h3>
        <div class="flex flex-col gap-3">
          <a href={website} class="hover:text-light/80 flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="12" cy="12" r="10"></circle><line
                x1="2"
                y1="12"
                x2="22"
                y2="12"></line>
              <path
                d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"
              ></path>
            </svg>
            {website.replace("https://", "")}
          </a>
          <div class="flex items-center gap-2 text-light/80">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
              ></path><circle cx="12" cy="10" r="3"></circle>
            </svg>
            {location}
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="flex flex-col items-center md:items-start gap-4">
        <h3 class="text-xl font-semibold">Connect</h3>
        <div class="grid grid-cols-2 gap-x-8 gap-y-3">
          {
            links.slice(0, 6).map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-light/80 transition-colors duration-300"
              >
                {link.name}
              </a>
            ))
          }
        </div>
      </div>

      <!-- Get in Touch -->
      <div class="flex flex-col items-center md:items-start gap-4">
        <h3 class="text-xl font-semibold">Get in Touch</h3>
        <p class="text-light/80 text-sm mb-2 text-center md:text-left">
          Feel free to reach out for collaborations or just a friendly hello!
        </p>
        <a
          href={`mailto:${email}`}
          class="px-6 py-2 bg-light/10 hover:bg-light/20 rounded-full transition-colors duration-300 flex items-center gap-2"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="opacity-80"
          >
            <rect width="20" height="16" x="2" y="4" rx="2"></rect>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
          </svg>
          {email}
        </a>
      </div>
    </div>

    <!-- Divider -->
    <div class="h-px bg-light/10 my-8"></div>

    <!-- Copyright -->
    <div
      class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-light/60"
    >
      <p>© {new Date().getFullYear()} {fullName}. All rights reserved.</p>
      <p>Made with ❤️ by {nickName}</p>
    </div>
  </div>
</footer>
